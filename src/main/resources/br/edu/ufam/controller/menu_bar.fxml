<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ufam.controller.MenuBarController">
  <menus>
    <Menu mnemonicParsing="false" text="Usuários">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickCadastrarUsuario" text="Cadastrar" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Ingrediente">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickListarIngredientes" text="Listar" />
      </items>
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickCadastrarIngrediente" text="Cadastrar" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Produto">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickCadastrarProduto" text="Cadastrar" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Cliente">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickListarClientes" text="Listar" />
            <MenuItem mnemonicParsing="false" onAction="#clickCadastrarCliente" text="Cadastrar" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Opções">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickLogout" text="Sair" />
      </items>
    </Menu>
  </menus>
</MenuBar>
